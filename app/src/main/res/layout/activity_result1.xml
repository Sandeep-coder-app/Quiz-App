<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cpp.Result1Activity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:elevation="10.0dp"
        android:focusable="true"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardBackgroundColor="#1DE9B6"
        app:contentPadding="@dimen/_10sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Correct Answer"
            android:textStyle="bold"
            android:textSize="@dimen/_25ssp"/>

        <TextView
            android:id="@+id/tvres1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:text="LargeText"
            android:textSize="@dimen/_15ssp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Wrong Answer"
            android:layout_marginTop="@dimen/_90sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_25ssp"/>

        <TextView
            android:id="@+id/tvres2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_130sdp"
            android:text="LargeText"
            android:textSize="@dimen/_15ssp"
            android:textAlignment="center"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Final Score"
            android:textStyle="bold"
            android:textSize="@dimen/_25ssp"
            android:layout_marginTop="@dimen/_200sdp"/>


        <TextView
            android:id="@+id/tvres3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_240sdp"
            android:text="LargeText"
            android:textSize="@dimen/_15ssp"
            android:textAlignment="center"
            android:textStyle="bold"/>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnexit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_450sdp"
        android:layout_marginRight="@dimen/_45sdp"
        android:layout_marginLeft="@dimen/_45sdp"
        android:text="Restart"
        android:textSize="@dimen/_15ssp"
        android:backgroundTint="#00B0FF" />
</RelativeLayout>